generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model post_travels {
  id          String   @id @default(cuid())
  title       String
  description String
  createdAt   DateTime @default(now())
  country     String
  city        String
  image       String
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
  hotels      hotels   @relation(fields: [hotelsId], references: [id])
  hotelsId    String
}

model User {
  id          String         @id @default(cuid())
  external_id String         @unique
  email       String         @unique
  attributes  Json
  name        String
  posts       post_travels[]
}

model hotels {
  id           String         @id @default(cuid())
  name         String
  description  String
  createdAt    DateTime       @default(now())
  country      String
  city         String
  image        String
  post_travels post_travels[]
}
